{
    "name": "vscode-hipcpp",
    "displayName": "vscode-hipcpp",
    "author": {
        "name": "N. Y_Kazu",
        "email": "sabishiitsukiyo@gmail.com"
    },
    "icon": "images/hipIcon.png",
    "description": "HIP C++ language support for Visual Studio Code",
    "version": "0.1.1",
    "publisher": "kriegalex",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/kriegalex/vscode-cuda.git"
    },
    "contributes": {
        "languages": [{
            "id": "hip",
            "aliases": ["HIP C++", "hip"],
            "extensions": [".hip"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "hip",
            "scopeName": "source.hip-cpp",
            "path": "./syntaxes/hip.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "hip",
                "path": "./snippets/hip.json"
            }
        ]
    }
}